{
  "name": "@dbview/core",
  "version": "0.0.1",
  "description": "Core business logic for DB-View - shared between desktop and VS Code",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dbview/types": "workspace:*",
    "sql-formatter": "^15.6.12"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.2",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@dbview/types": "workspace:*"
  }
}
