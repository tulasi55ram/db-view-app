{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/preload",
    "baseUrl": ".",
    "declaration": false,
    "types": ["node"]
  },
  "include": ["src/preload/**/*"],
  "exclude": ["node_modules", "dist"]
}
