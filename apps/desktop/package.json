{
  "name": "@dbview/desktop",
  "version": "0.0.1",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "tsc -p ./tsconfig.main.json && wait-on http://localhost:5174 && electron .",
    "build": "tsc -p ./tsconfig.main.json",
    "clean": "rm -rf dist release",
    "rebuild": "electron-builder install-app-deps",
    "postinstall": "electron-builder install-app-deps || true",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.dbview.app",
    "productName": "DBView",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../../packages/desktop-ui/dist",
        "to": "renderer"
      }
    ],
    "asar": true,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Development",
      "icon": "assets/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@dbview/types": "workspace:^",
    "@dbview/adapters": "workspace:^",
    "@elastic/elasticsearch": "^8.17.0",
    "better-sqlite3": "12.5.0",
    "cassandra-driver": "^4.7.2",
    "electron-log": "^5.1.1",
    "electron-store": "8",
    "electron-updater": "^6.1.8",
    "ioredis": "^5.8.2",
    "mongodb": "6.12.0",
    "mssql": "^12.2.0",
    "mysql2": "^3.16.0",
    "pg": "^8.11.5",
    "sql-formatter": "^15.6.12"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/mssql": "^9.1.8",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.10.9",
    "electron": "28.2.1",
    "electron-builder": "^24.13.3",
    "prebuild-install": "^7.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.2",
    "wait-on": "^9.0.3"
  }
}
