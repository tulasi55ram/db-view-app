{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@dbview/types": ["packages/types/src"],
      "@dbview/utils": ["packages/utils/src"],
      "@dbview/ui": ["packages/ui/src"],
      "@dbview/adapters": ["packages/adapters/src"]
    }
  }
}
